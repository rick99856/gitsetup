<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step1. get the list \n click the button to get your list"
            android:id="@+id/textView3" />

        <Spinner
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:id="@+id/list"

            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:id="@+id/btn_getlist"
                android:background="@drawable/listtrs"
                android:layout_gravity="center" />

            <Button
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:id="@+id/btn_status"
                android:background="@drawable/statustrs"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step2. get the chanban \n use scanner or input by hand"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/ed_cban"
            android:layout_gravity="center_horizontal"
            android:hint="這裡是產編" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <Button
                android:layout_width="110dp"
                android:layout_height="60dp"

                android:id="@+id/btn_qrcode"
                android:textSize="18dp"
                android:background="@drawable/qrcodetrs"
                android:textColor="@android:color/white"

                android:textStyle="bold" />

            <Button
                android:layout_width="110dp"
                android:layout_height="60dp"

                android:id="@+id/btn_find"
                android:textSize="18dp"
                android:background="@drawable/findtrs"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="step3. get the info \n you can edit the site and date"
            android:id="@+id/textView5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/text1"
                android:textSize="18dp"
                android:text="產編名稱:"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="32dp"

                android:id="@+id/txt_name"
                android:textSize="18dp"
                android:hint=" 這裡是產編名稱" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="18dp"
                android:text="財產位置:" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/ed_site"
                android:textSize="18dp"
                android:hint="這是位置" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="18dp"
                android:text="盤點日期:" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/ed_ps"
                android:textSize="18dp"
                android:hint="這是備註" />
        </LinearLayout>

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/btn_send"
            android:background="@drawable/sendtrs"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>